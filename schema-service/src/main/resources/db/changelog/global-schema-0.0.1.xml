<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">


    <changeSet author="realxdata" id="realxdata-schema-0.0.1-1">
        <createTable tableName="PORTFOLIO">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="NAME" type="VARCHAR(100)">
            </column>
            <column name="CRTD_BY" type="VARCHAR(20)"/>
        </createTable>
    </changeSet>


    <changeSet author="realxdata" id="realxdata-schema-0.0.1-2">
        <createTable tableName="ASSET">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="PORTFOLIOID" type="BIGINT">
            </column>
            <column name="ASSET_REF" type="VARCHAR(20)"/>
            <column name="ADDRESS" type="VARCHAR(100)"/>
            <column name="ZIPCODE" type="INT"/>
            <column name="CITY" type="VARCHAR(20)"/>
            <column name="IS_RESTRICTED" type="${booleanType}"/>
            <column name="YOC" type="VARCHAR(20)"/>
        </createTable>
    </changeSet>


    <changeSet author="realxdata" id="realxdata-schema-0.0.1-3">
        <createTable tableName="UNIT">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="ASSETID" type="BIGINT">
            </column>
            <column name="UNIT_REF" type="VARCHAR(20)"/>
            <column name="SIZE" type="INT"/>
            <column name="IS_RENTED" type="${booleanType}"/>
            <column name="RENT" type="NUMBER(16,4)"/>
            <column name="TYPE" type="VARCHAR(20)"/>
            <column name="TENANT" type="VARCHAR(30)"/>
            <column name="LEASE_START" type="DATE"/>
            <column name="LEASE_END" type="DATE"/>
            <column name="DATA_TIMESTAMP" type="DATE"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
